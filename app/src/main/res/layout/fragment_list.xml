<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ListFragment">

    <TextView
        android:id="@+id/theTitleOnList"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact_list" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchContactListId"
        android:layout_marginTop="8dp"
        android:layout_below="@id/theTitleOnList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contactListRecyclerViewId"
        android:layout_marginTop="8dp"
        android:layout_below="@id/searchContactListId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>